{
  "$schema": "helm_scheme.json",

  "team": "..",
  "environment": "prod",
  "cluster": "prd",
  "component": "app",
  "service": "order",

  "imageRepository": "...",
  "imageTag": "_might_be_ignored_",

  "consulTags": ["http"],
  "ports": [{"port": 8081}],

  "replicaCount": 12,

  "cpuRequest": "100m",
  "cpuLimit": "500m",
  "memory": "1Gi",

  "prometheusScrape": true,
  "prometheusPort": 8081,

  "vaultSecrets": {
    "env-prod/delivery/prod/order": {
      "SPRING_DATASOURCE_DE-WRITE_URL": "SPRING_DATASOURCE_DE-WRITE_URL",
      "SPRING_DATASOURCE_DE-WRITE_USERNAME": "SPRING_DATASOURCE_DE-WRITE_USERNAME",
      "SPRING_DATASOURCE_DE-WRITE_PASSWORD": "SPRING_DATASOURCE_DE-WRITE_PASSWORD",
      "SPRING_DATASOURCE_DE-READ_URL": "SPRING_DATASOURCE_DE-READ_URL",
      "SPRING_DATASOURCE_DE-READ_USERNAME": "SPRING_DATASOURCE_DE-READ_USERNAME",
      "SPRING_DATASOURCE_DE-READ_PASSWORD": "SPRING_DATASOURCE_DE-READ_PASSWORD",
      "SPRING_DATASOURCE_FR-WRITE_URL": "SPRING_DATASOURCE_FR-WRITE_MASTER_URL",
      "SPRING_DATASOURCE_FR-WRITE_USERNAME": "SPRING_DATASOURCE_FR-WRITE_USERNAME",
      "SPRING_DATASOURCE_FR-WRITE_PASSWORD": "SPRING_DATASOURCE_FR-WRITE_PASSWORD",
      "SPRING_DATASOURCE_FR-READ_URL": "SPRING_DATASOURCE_FR-READ_MASTER_URL",
      "SPRING_DATASOURCE_FR-READ_USERNAME": "SPRING_DATASOURCE_FR-READ_USERNAME",
      "SPRING_DATASOURCE_FR-READ_PASSWORD": "SPRING_DATASOURCE_FR-READ_PASSWORD",
      "SPRING_FLYWAY_URL": "SPRING_FLYWAY_URL",
      "SPRING_FLYWAY_USER": "SPRING_FLYWAY_USER",
      "SPRING_FLYWAY_PASSWORD": "SPRING_FLYWAY_PASSWORD",
      "SPRING_RABBITMQ_HOST": "SPRING_RABBITMQ_HOST",
      "SPRING_RABBITMQ_PORT": "SPRING_RABBITMQ_PORT",
      "SPRING_RABBITMQ_USERNAME": "SPRING_RABBITMQ_USERNAME",
      "SPRING_RABBITMQ_PASSWORD": "SPRING_RABBITMQ_PASSWORD"
    }
  }
}
